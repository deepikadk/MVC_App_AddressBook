<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        @* Header Menu *@
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    @*<a href="/" class="navbar-brand">Address Book</a>*@
                    <a href="/Home/Index" class="navbar-brand">Address Book</a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/Home/IndexOrg">Organization Details</a>
                        </li>
                        <li>
                            <a href="/Home/IndexPpl">People Details</a>
                        </li>


                    </ul>

                </div>
            </div>
        </div>
        <div class="container">
            @* Page Header *@
            <div class="page-header" id="banner">

            </div>
            @* Page Body *@
            <div class="page-body">
                <div class="row">
                    <div class="col-xs-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            @* Page Footer *@
            <footer>
                <div class="row">
                    <div class="col-xs-12">

                        <p>Created by <a href="#" rel="nofollow">Deepika Dk</a>.</p>
                        <p>Purpose: Developed as the part of Administrate - Engineering Internship 2nd Round Interview.</p>

                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
    @RenderSection("scripts", false) 
</body>
</html>
